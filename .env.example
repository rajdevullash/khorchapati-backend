# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/aybay

# JWT Secret (use a strong random string)
JWT_SECRET=your-secret-key-here

# Session Secret (use a strong random string)
SESSION_SECRET=your-session-secret-here

# Email Configuration (for OTP and notifications)
# Option 1: Gmail (use App Password, not regular password)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password

# Option 2: Custom SMTP (recommended for production)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password

# Option 3: SendGrid (recommended for Render.com)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Fallback: Allow email failures (OTP will be logged in console)
ALLOW_EMAIL_FAILURE=false

# Test email (for testing email configuration)
TEST_EMAIL=test@example.com

# Google OAuth 2.0 (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# Backend URL
BACKEND_URL=http://localhost:4000

# Frontend URL (for OAuth redirects)
FRONTEND_URL=aybay://auth/callback

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
